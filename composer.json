{
    "name": "huangdijia/invade",
    "description": "A PHP function to work with private properties and methods",
    "keywords": [
        "huangdijia",
        "invade"
    ],
    "homepage": "https://github.com/huangdijia/invade",
    "license": "MIT",
    "authors": [
        {
            "name": "Deeka",
            "email": "huangdijia@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Huangdijia\\Invade\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Huangdijia\\Invade\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "@php phpstan analyse --memory-limit 512M -l 0 -c phpstan.neon ./src",
        "test": "@php vendor/bin/pest",
        "test-coverage": "@php vendor/bin/pest --coverage",
        "cs-fix": "@php vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "phpstan": {
            "includes": [
                "phpstan-extension.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
